<h1>みんなのブログ一覧</h1>
<%= link_to 'ブログを投稿する', new_blog_path, class: 'btn btn-info' %>

<hr>

<table class="table">
  <tr>
    <th>Coffee Info</th>
  </tr>
  <% @blogs.each do |blog| %>
  <tr>
    <td><%= blog.title %></td>
    <td><%= blog.content %></td>
    <td><%= link_to '詳細', blog_path(blog) %></td>
    <td><%= link_to '編集', edit_blog_path(blog) %></td>
    <td><%= link_to '削除', blog_path(blog), method: :delete, data: { confirm: '削除しますか？' } %></td>
  </tr>
  <% end %>
</table>
